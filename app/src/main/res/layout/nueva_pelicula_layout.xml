<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nuevaPelicula"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nombrePelicula"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/et_director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/director"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_protagonista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/protagonista"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_antagonista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/antagonista"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_genero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/genero"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fecha"
            android:inputType="date" />

        <EditText
            android:id="@+id/et_duracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/duracion"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nota"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <RatingBar
            android:id="@+id/rb_nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:layout_gravity="center_horizontal" />

        <CheckBox
            android:id="@+id/cb_vista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visto" />

        <CheckBox
            android:id="@+id/cb_favorito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fav" />

        <Button
            android:id="@+id/btn_aceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aceptar"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>